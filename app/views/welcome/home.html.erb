<% if flash[:age_message] %>
  <p class="warning"><%= flash[:age_message] %></p>
<% end %>

<div class="container">
  <% if current_user%>
    <div class="jumbotron">
      <h1>Welcome, <%= current_user.username %>.</h1>
    </div>


    <div class="row text-center">
      <% if remaining_questions.empty? %>
        <%= button_to "PLAY", out_of_questions_path, method: "get", class: "homepage-btn" %>
      <% else %>
        <%= button_to "PLAY", {controller: "questions", action: "show", id: rand_slug }, method: "get", class: "homepage-btn" %>
      <% end %>
    </div>

  <% else %>
    <div class="jumbotron">
      <h1>Welcome.</h1>
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 text-center">
        <p><%= link_to "Log in", login_path %> or <%= link_to "sign up", signup_path %> to start.</p>
      </div>
    </div>
  <% end %>
</div>
