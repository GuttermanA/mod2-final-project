<% if flash[:age_message] %>
  <p class="warning"><%= flash[:age_message] %></p>
<% end %>

<div class="container">
  <% if current_user%>
    <div class="jumbotron">
      <h1>Welcome, <%= current_user.username %>.</h1>
    </div>
  <% else %>
    <div class="jumbotron">
      <h1>Welcome.</h1>
    </div>

    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-4 text-center">
        <p><%= link_to "Log in", login_path %> or <%= link_to "sign up", signup_path %> to start.</p>
      </div>
    </div>
  <% end %>
</div>
