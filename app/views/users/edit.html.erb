<div class="jumbotron">
  <h1>Edit Profile</h1>
</div>

<br>
<h3>Username: <%= current_user.username %></h3>
<br>
<br>


<%= form_for current_user do |f| %>
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= f.text_field :email, placeholder: "Email Address", class: "form-control" %>
    </div
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-md-12">
    <%= f.submit "Submit", class:"btn btn-danger" %>
  </div>
<% end %>
