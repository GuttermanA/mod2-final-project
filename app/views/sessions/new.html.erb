<% if flash[:login_message] %>
  <%= flash[:login_message] %>
<% end %>

<h1>Log In</h1>

<%= form_tag '/login' do  %>
  <%= label_tag 'Username' %>
  <%= text_field_tag :'user[username]' %>
  <%= label_tag 'Password' %>
  <%= password_field_tag :'user[password]' %>
  <%= submit_tag 'Log In' %>
<% end %>
