<% if flash[:login_message] %>
  <p class="warning"><%= flash[:login_message] %></p>
<% end %>
<div class="form-group col-md-12">
  <h1>Log In</h1>
</div>

<%= form_tag '/login' do  %>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= label_tag 'Username' %>
      <%= text_field_tag :'user[username]', nil, class: "form-control" %>
      <%= label_tag 'Password' %>
      <%= password_field_tag :'user[password]',nil, class: "form-control" %>
    </div>
  <div class="form-group col-md-12">
    <%= submit_tag "Submit", class:"btn btn-danger" %>
  </div>
<% end %>
